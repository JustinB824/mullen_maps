<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>
	
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>
	
	<%= f.label :last_name %>
	<%= f.text_field :last_name %>
	
	<%= f.label :email %>
	<%= f.text_field :email %>
	
	<%= f.label :address_text, "Address" %>
	<%= f.text_field :address_text, :id => "searchTextField", :placeholder => "Address" %>
	
	<%= f.hidden_field :address_coords %>
	
	<%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>
