<div class="row">
  <div class="col-md-12">
	  <h1>All users</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
	<table class="table table-striped">
	<thead>
	  <tr>
		  <th>Name</th>
		  <th>Email</th>
		  <th>Location</th>
		  <th>&nbsp;</th>
		  <th>&nbsp;</th>
	  </tr>
	</thead>
	<tbody>
	  <% @users.each do |user| %>
	    <tr>
	      <td><%= link_to "#{user.first_name} #{user.last_name}", user %></td>
	      <td><%= mail_to user.email, user.email %></td>
	      <td><%= user.address_text %></td>
	      <td>
	      	<%= link_to "/users/#{user.id}/edit" do %>
	      		<span class="glyphicon glyphicon-pencil">
	      	<% end %>
	      </td>
	      <td>
	      	<%= link_to user, method: :delete, data: { confirm: "Are you sure you want to delete this person?" } do %>
	      		<span class="glyphicon glyphicon-remove">
	      	<% end %>
	      </td>
	    </tr>
	  <% end %>
	</tbody>
	</table>
  </div>
  <div class="col-md-2"></div>
</div>
