<div class="row">
  <div class="span12">
	  <h1>All users</h1>
  </div>
</div>

<div class="row">
  <div class="span6 offset6">
	<ul class="users">
	  <% @users.each do |user| %>
	    <li>
	      <div><%= link_to "#{user.first_name} #{user.last_name}", user %></div>
	      <div><%= mail_to user.email, user.email %></div>
	      <div><%= user.address_text %></div>
	    </li>
	  <% end %>
	</ul>
  </div>
</div>
